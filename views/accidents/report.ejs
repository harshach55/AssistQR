<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emergency Report - AssistQR</title>
    <link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Offline Storage and Sync -->
    <script src="/js/offline-storage.js"></script>
    <script src="/js/offline-sync.js"></script>
    <% if (googleMapsApiKey) { %>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&libraries=places" async defer></script>
    <% } %>
    <style>
        .emergency-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            margin-bottom: 2rem;
        }
        .emergency-header h1 {
            color: white;
            margin-bottom: 0.5rem;
        }
        .location-status {
            padding: 0.75rem;
            border-radius: 6px;
            margin-bottom: 1rem;
            font-size: 0.875rem;
        }
        .location-status.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .location-status.error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .location-status.info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }
    </style>
</head>
<body>
    <div class="emergency-header">
        <h1>üö® Emergency Assistance</h1>
        <p>You're helping with a possible accident for this vehicle</p>
    </div>

    <div class="container-sm">
        <!-- Offline Status Indicator -->
        <div id="offline-status" class="card" style="margin-bottom: 1rem; display: none; background-color: #fff3cd; border: 1px solid #ffc107;">
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="font-size: 1.2rem;">üì¥</span>
                <div style="flex: 1;">
                    <strong>No Internet Connection</strong>
                    <p style="margin: 0.25rem 0 0 0; font-size: 0.875rem;">Will try cellular network first. If that fails, report will be saved and synced when connection is restored.</p>
                </div>
                <span id="pending-count" style="background-color: #dc3545; color: white; padding: 0.25rem 0.5rem; border-radius: 12px; font-size: 0.75rem; font-weight: bold; display: none;">0</span>
            </div>
        </div>

        <!-- Sync Status -->
        <div id="sync-status" class="sync-status" style="margin-bottom: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>

        <div class="card">
            <div style="margin-bottom: 1.5rem; padding: 1rem; background-color: var(--bg-light); border-radius: 6px;">
                <h3 style="margin-bottom: 0.5rem;">Vehicle Information</h3>
                <p><strong>License Plate:</strong> <%= vehicle.licensePlate %></p>
                <p><strong>Model:</strong> <%= vehicle.model %></p>
                <p><strong>Color:</strong> <%= vehicle.color %></p>
            </div>

            <form id="accident-form" method="POST" action="/accidents/report" enctype="multipart/form-data">
                <input type="hidden" name="qrToken" value="<%= qrToken %>">
                
                <!-- Location -->
                <div class="form-group">
                    <label class="form-label">Location *</label>
                    <div id="location-status" class="location-status info" style="display: none;">
                        Requesting location access...
                    </div>
                    <div id="offline-location-note" style="display: none; padding: 0.75rem; background-color: #fff3cd; border: 1px solid #ffc107; border-radius: 6px; margin-bottom: 1rem; font-size: 0.875rem;">
                        <strong>üì¥ Offline Mode:</strong> GPS and location search are not available. Please enter location details manually below.<br>
                        <strong>üì± Cellular SMS:</strong> If you have cellular network (5G/4G/3G/2G), the report will be sent via SMS automatically.
                    </div>
                    
                    <!-- Location Search (disabled when offline) -->
                    <div style="margin-bottom: 1rem; position: relative;">
                        <input 
                            type="text" 
                            id="location-search" 
                            class="form-input" 
                            placeholder="Type to search for location or address..."
                            autocomplete="off"
                        >
                        <div id="location-suggestions" style="display: none; position: absolute; top: 100%; left: 0; right: 0; z-index: 1000; background: white; border: 1px solid #ddd; border-radius: 6px; max-height: 200px; overflow-y: auto; margin-top: 5px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"></div>
                    </div>
                    <script>
                        // Disable location search when offline
                        function updateLocationSearchAvailability() {
                            const locationSearchInput = document.getElementById('location-search');
                            const isOnline = window.offlineStorage && window.offlineStorage.isOnline ? window.offlineStorage.isOnline() : navigator.onLine;
                            
                            if (locationSearchInput) {
                                if (!isOnline) {
                                    locationSearchInput.disabled = true;
                                    locationSearchInput.placeholder = 'Location search unavailable offline. Please enter location manually below.';
                                    locationSearchInput.style.backgroundColor = '#f5f5f5';
                                } else {
                                    locationSearchInput.disabled = false;
                                    locationSearchInput.placeholder = "Search for location or address (e.g., 'Main Street, New York')...";
                                    locationSearchInput.style.backgroundColor = '';
                                }
                            }
                        }
                        
                        // Update on load and when online status changes
                        window.addEventListener('load', updateLocationSearchAvailability);
                        if (window.offlineStorage) {
                            window.offlineStorage.onOnlineStatusChange(updateLocationSearchAvailability);
                        }
                    </script>
                    
                    <div style="display: flex; gap: 0.5rem;">
                        <button type="button" id="get-location-btn" class="btn btn-primary" style="flex: 1;">
                            üìç Use Current Location
                        </button>
                        <button type="button" id="clear-location-btn" class="btn btn-outline">
                            Clear
                        </button>
                    </div>
                    
                    <input type="hidden" id="latitude" name="latitude" value="">
                    <input type="hidden" id="longitude" name="longitude" value="">
                    <div id="selected-location-display" style="margin-top: 0.5rem; font-size: 0.875rem; color: var(--text-secondary);"></div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="manualLocation">Additional Location Details (Optional)</label>
                    <input 
                        type="text" 
                        id="manualLocation" 
                        name="manualLocation" 
                        class="form-input" 
                        placeholder="e.g., Near Main Street and 5th Avenue, behind the blue building"
                        maxlength="500"
                    >
                    <div class="form-help">Add any additional details to help locate the exact spot</div>
                </div>

                <!-- Photos -->
                <div class="form-group">
                    <label class="form-label" for="images">Upload Photos *</label>
                    <div style="position: relative; display: inline-block; width: 100%;">
                    <input 
                        type="file" 
                        id="images" 
                        name="images" 
                            style="position: absolute; opacity: 0; width: 0; height: 0;"
                        accept="image/*" 
                        multiple
                        capture="environment"
                        required
                    >
                        <label for="images" class="btn btn-primary" style="display: inline-block; cursor: pointer; width: 100%; text-align: center; padding: 0.75rem 1rem;">
                            üì∑ Take Photo
                        </label>
                    </div>
                    <div class="form-help" style="margin-top: 0.5rem;">You can select multiple photos. Maximum 10 images, 100MB each.</div>
                    <div id="image-preview-container" class="image-preview-container"></div>
                </div>

                <!-- Helper Note -->
                <div class="form-group">
                    <label class="form-label" for="helperNote">Additional Information (Optional)</label>
                    <textarea 
                        id="helperNote" 
                        name="helperNote" 
                        class="form-textarea" 
                        placeholder="Your name, phone number, or any additional details..."
                        maxlength="1000"
                    ></textarea>
                </div>

                <button type="submit" class="btn btn-danger btn-block" style="font-size: 1.1rem; padding: 1rem;">
                    Submit Emergency Report
                </button>
            </form>
        </div>

        <div class="card" style="background-color: #fff3cd; border: 1px solid #ffc107;">
            <p style="margin: 0;"><strong>Note:</strong> By submitting this report, emergency contacts for this vehicle will be immediately notified via email and SMS with the provided information. This form works completely offline - reports are saved locally and automatically synced when connection is restored.</p>
        </div>
    </div>

    <script>
        const form = document.getElementById('accident-form');
        const getLocationBtn = document.getElementById('get-location-btn');
        const clearLocationBtn = document.getElementById('clear-location-btn');
        const locationStatus = document.getElementById('location-status');
        const locationSearchInput = document.getElementById('location-search');
        const locationSuggestions = document.getElementById('location-suggestions');
        const latitudeInput = document.getElementById('latitude');
        const longitudeInput = document.getElementById('longitude');
        const selectedLocationDisplay = document.getElementById('selected-location-display');
        const imagesInput = document.getElementById('images');
        const imagePreviewContainer = document.getElementById('image-preview-container');
        let searchTimeout = null;

        // Function to request location permission and get current location
        function requestLocation() {
            if (!navigator.geolocation) {
                locationStatus.style.display = 'block';
                locationStatus.className = 'location-status error';
                locationStatus.textContent = 'Geolocation is not supported by your browser. Please search for a location instead.';
                return;
            }

            locationStatus.style.display = 'block';
            locationStatus.className = 'location-status info';
            locationStatus.textContent = 'Requesting location permission...';
            getLocationBtn.disabled = true;

            navigator.geolocation.getCurrentPosition(
                (position) => {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    
                    setLocation(lat, lng, 'Current Location');
                    
                    locationStatus.className = 'location-status success';
                    locationStatus.textContent = '‚úì Location captured successfully!';
                    getLocationBtn.textContent = '‚úì Location Captured';
                    getLocationBtn.disabled = false;
                },
                (error) => {
                    locationStatus.className = 'location-status info';
                    let errorMsg = '';
                    
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMsg = 'Location permission denied. Please search for a location or allow access in your browser settings.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMsg = 'Location unavailable. Please search for a location instead.';
                            break;
                        case error.TIMEOUT:
                            errorMsg = 'Location request timed out. Please try again or search for a location.';
                            break;
                        default:
                            errorMsg = 'Unable to get location. Please search for a location instead.';
                            break;
                    }
                    
                    locationStatus.textContent = errorMsg;
                    getLocationBtn.disabled = false;
                    getLocationBtn.textContent = 'üìç Use Current Location';
                },
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        }

        // Auto-request location on page load (but don't block the UI)
        window.addEventListener('load', () => {
            // Request location in background, but don't show status immediately
            // User can still type in search field
            // Only show status if we're actually requesting
            setTimeout(() => {
                if (navigator.geolocation) {
                    requestLocation();
                } else {
                    // Geolocation not supported - hide status, user can use search
                    locationStatus.style.display = 'none';
                }
            }, 500);
        });

        // Manual location button click
        getLocationBtn.addEventListener('click', requestLocation);

        // Clear location button
        clearLocationBtn.addEventListener('click', () => {
            latitudeInput.value = '';
            longitudeInput.value = '';
            locationSearchInput.value = '';
            selectedLocationDisplay.textContent = '';
            locationStatus.style.display = 'none';
            locationStatus.className = 'location-status info';
            locationStatus.textContent = 'No location selected. Click "Use Current Location" or search for a location.';
            getLocationBtn.textContent = 'üìç Use Current Location';
            locationSuggestions.style.display = 'none';
        });

        // Set location coordinates
        function setLocation(lat, lng, displayName = '') {
            latitudeInput.value = lat;
            longitudeInput.value = lng;
            
            if (displayName) {
                selectedLocationDisplay.textContent = `üìç Selected: ${displayName}`;
                selectedLocationDisplay.style.color = 'var(--success-color)';
            } else {
                selectedLocationDisplay.textContent = `üìç Coordinates: ${lat.toFixed(6)}, ${lng.toFixed(6)}`;
                selectedLocationDisplay.style.color = 'var(--success-color)';
            }
            
            locationStatus.style.display = 'block';
            locationStatus.className = 'location-status success';
            locationStatus.textContent = '‚úì Location set successfully!';
        }

        // Google Maps Places Autocomplete initialization
        let autocomplete = null;
        let placesService = null;
        let searchInitialized = false;
        
        // Fallback to OpenStreetMap search (always available)
        function initOpenStreetMapSearch() {
            if (searchInitialized) return; // Prevent duplicate listeners
            
            locationSearchInput.addEventListener('input', (e) => {
                const query = e.target.value.trim();
                
                // Check if offline - don't make API calls when offline
                const isOnline = window.offlineStorage && window.offlineStorage.isOnline ? window.offlineStorage.isOnline() : navigator.onLine;
                
                if (!isOnline) {
                    // Offline: hide suggestions, let user type manually
                    locationSuggestions.style.display = 'none';
                    return;
                }
                
                clearTimeout(searchTimeout);
                
                if (query.length < 3) {
                    locationSuggestions.style.display = 'none';
                    return;
                }
                
                // Show loading indicator
                locationSuggestions.innerHTML = '<div style="padding: 1rem; color: var(--text-secondary); text-align: center;">Searching...</div>';
                locationSuggestions.style.display = 'block';
                
                searchTimeout = setTimeout(async () => {
                    try {
                        const response = await fetch(
                            `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}&limit=5&addressdetails=1`,
                            {
                                headers: {
                                    'User-Agent': 'VehicleSafetyQRSystem/1.0'
                                }
                            }
                        );
                        
                        const results = await response.json();
                        
                        if (results.length === 0) {
                            locationSuggestions.innerHTML = '<div style="padding: 1rem; color: var(--text-secondary);">No locations found</div>';
                            locationSuggestions.style.display = 'block';
                            return;
                        }
                        
                        locationSuggestions.innerHTML = results.map(result => {
                            const displayName = result.display_name || `${result.lat}, ${result.lon}`;
                            // Escape HTML and quotes properly
                            const safeDisplayName = displayName.replace(/'/g, "&#39;").replace(/"/g, "&quot;");
                            return `
                                <div 
                                    class="location-suggestion-item" 
                                    style="padding: 0.75rem; cursor: pointer; border-bottom: 1px solid #eee;"
                                    onmouseover="this.style.backgroundColor='#f0f0f0'"
                                    onmouseout="this.style.backgroundColor='white'"
                                    onclick="selectLocation(${result.lat}, ${result.lon}, '${safeDisplayName}')"
                                >
                                    <strong style="display: block; margin-bottom: 0.25rem;">${displayName}</strong>
                                    <small style="color: var(--text-secondary);">${result.lat}, ${result.lon}</small>
                                </div>
                            `;
                        }).join('');
                        
                        locationSuggestions.style.display = 'block';
                    } catch (error) {
                        console.error('Location search error:', error);
                        // Only show error if online (offline errors are expected)
                        if (isOnline) {
                            locationSuggestions.innerHTML = '<div style="padding: 1rem; color: var(--danger-color);">Error searching locations. Please try again.</div>';
                            locationSuggestions.style.display = 'block';
                        }
                    }
                }, 500);
            });
            
            searchInitialized = true;
            console.log('OpenStreetMap location search initialized');
        }
        
        <% if (googleMapsApiKey) { %>
        // Initialize Google Maps Places Autocomplete when API loads
        function initGoogleMapsAutocomplete() {
            if (typeof google !== 'undefined' && google.maps && google.maps.places) {
                try {
                    // Create Autocomplete object
                    autocomplete = new google.maps.places.Autocomplete(locationSearchInput, {
                        types: ['geocode', 'establishment'], // Limit to addresses and places
                        fields: ['geometry', 'formatted_address', 'name', 'place_id']
                    });
                    
                    // Handle place selection
                    autocomplete.addListener('place_changed', () => {
                        const place = autocomplete.getPlace();
                        
                        if (!place.geometry || !place.geometry.location) {
                            locationStatus.style.display = 'block';
                            locationStatus.className = 'location-status error';
                            locationStatus.textContent = 'No details available for this location. Please try another.';
                            return;
                        }
                        
                        const lat = place.geometry.location.lat();
                        const lng = place.geometry.location.lng();
                        const displayName = place.formatted_address || place.name || 'Selected Location';
                        
                        setLocation(lat, lng, displayName);
                        
                        // Hide any suggestion dropdowns
                        locationSuggestions.style.display = 'none';
                    });
                    
                    console.log('‚úÖ Google Maps Places Autocomplete initialized');
                } catch (error) {
                    console.error('Error initializing Google Maps Autocomplete:', error);
                    // Fallback to OpenStreetMap
                    initOpenStreetMapSearch();
                }
            } else {
                console.warn('Google Maps API not loaded, using OpenStreetMap fallback');
                initOpenStreetMapSearch();
            }
        }
        
        // Initialize OpenStreetMap search immediately (works as fallback)
        initOpenStreetMapSearch();
        
        // Wait for Google Maps API to load
        if (typeof google !== 'undefined' && google.maps && google.maps.places) {
            // Already loaded, initialize immediately
            initGoogleMapsAutocomplete();
        } else {
            // Check every 100ms if Google Maps API is loaded
            const checkGoogleMaps = setInterval(() => {
                if (typeof google !== 'undefined' && google.maps && google.maps.places) {
                    initGoogleMapsAutocomplete();
                    clearInterval(checkGoogleMaps);
                }
            }, 100);
            
            // Timeout after 5 seconds - if Google Maps doesn't load, OpenStreetMap is already working
            setTimeout(() => {
                clearInterval(checkGoogleMaps);
                if (!autocomplete) {
                    console.warn('Google Maps API failed to load, using OpenStreetMap search (already initialized)');
                }
            }, 5000);
        }
        <% } else { %>
        // Google Maps API key not configured - use OpenStreetMap
        console.log('Google Maps API key not configured, using OpenStreetMap');
        initOpenStreetMapSearch();
        <% } %>

        // Select location from search results (for fallback OpenStreetMap search)
        window.selectLocation = function(lat, lng, displayName) {
            // Decode HTML entities if present
            const decodedName = displayName
                .replace(/&#39;/g, "'")
                .replace(/&quot;/g, '"')
                .replace(/&amp;/g, '&');
            locationSearchInput.value = decodedName;
            locationSuggestions.style.display = 'none';
            setLocation(lat, lng, decodedName);
        };

        // Hide suggestions when clicking outside (only for fallback search)
        document.addEventListener('click', (e) => {
            if (!e.target.closest('#location-search') && !e.target.closest('#location-suggestions')) {
                locationSuggestions.style.display = 'none';
            }
        });

        // Image preview

        // Image preview
        imagesInput.addEventListener('change', (e) => {
            imagePreviewContainer.innerHTML = '';
            const files = Array.from(e.target.files);
            
            if (files.length > 10) {
                alert('Maximum 10 images allowed. Only the first 10 will be uploaded.');
                imagesInput.files = new FileList(files.slice(0, 10));
            }
            
            files.slice(0, 10).forEach((file, index) => {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const div = document.createElement('div');
                        div.className = 'image-preview';
                        div.innerHTML = `
                            <img src="${e.target.result}" alt="Preview ${index + 1}">
                        `;
                        imagePreviewContainer.appendChild(div);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });

        // Initialize Offline Storage
        let offlineStorageReady = false;
        
        // Initialize immediately if offlineStorage is available
        async function initOfflineStorage() {
            if (window.offlineStorage && !offlineStorageReady) {
                try {
                    await window.offlineStorage.init();
                    offlineStorageReady = true;
                    console.log('‚úÖ Offline storage initialized');
                    
                    // Update pending count
                    if (window.offlineSync) {
                        await window.offlineSync.updatePendingCount();
                        // Don't call initSync here - it will be called by offline-sync.js to prevent duplicates
                    }
                } catch (error) {
                    console.error('‚ùå Failed to initialize offline storage:', error);
                }
            }
        }
        
        // Initialize on page load
        window.addEventListener('load', initOfflineStorage);
        
        // Also try to initialize immediately if scripts are already loaded
        if (window.offlineStorage) {
            initOfflineStorage();
        }

        // Service Worker Registration for Offline Support
        // Note: Service Workers require HTTPS on mobile (except localhost)
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                // Check if we're on HTTPS or localhost (Service Worker works)
                const isSecure = location.protocol === 'https:' || location.hostname === 'localhost' || location.hostname === '127.0.0.1';
                
                if (isSecure) {
                    navigator.serviceWorker.register('/sw.js')
                        .then((registration) => {
                            console.log('‚úÖ Service Worker registered:', registration.scope);
                            
                            // Listen for service worker messages (but don't sync immediately - let offline-sync.js handle it)
                            navigator.serviceWorker.addEventListener('message', (event) => {
                                if (event.data && event.data.type === 'SYNC_REPORTS') {
                                    console.log('üîÑ Service Worker requested sync (handled by offline-sync.js)');
                                    // Sync is already handled by offline-sync.js's onOnlineStatusChange
                                }
                            });
                            
                            // Check for updates
                            registration.addEventListener('updatefound', () => {
                                console.log('üîÑ Service Worker update found');
                            });
                        })
                        .catch((error) => {
                            console.log('‚ùå Service Worker registration failed:', error);
                            console.log('‚ö†Ô∏è Offline functionality may not work on HTTP. Use HTTPS for full offline support.');
                        });
                } else {
                    console.log('‚ö†Ô∏è Service Worker requires HTTPS. Offline mode may not work on HTTP.');
                }
            });
        } else {
            console.log('‚ö†Ô∏è Service Worker not supported in this browser');
        }

        // Update offline status indicator
        function updateOfflineStatus() {
            const offlineStatus = document.getElementById('offline-status');
            const offlineLocationNote = document.getElementById('offline-location-note');
            const isOnline = window.offlineStorage && window.offlineStorage.isOnline ? window.offlineStorage.isOnline() : navigator.onLine;
            
            if (offlineStatus) {
                if (!isOnline) {
                    offlineStatus.style.display = 'block';
                } else {
                    offlineStatus.style.display = 'none';
                }
            }
            
            if (offlineLocationNote) {
                if (!isOnline) {
                    offlineLocationNote.style.display = 'block';
                } else {
                    offlineLocationNote.style.display = 'none';
                }
            }
        }

        // Listen for online/offline events (only for UI updates, sync is handled by offline-sync.js)
        window.offlineStorage.onOnlineStatusChange((isOnline) => {
            updateOfflineStatus();
            // Don't call sync here - it's already handled by offline-sync.js to prevent duplicates
        });

        // Initial status check
        updateOfflineStatus();

        // Enhanced Cellular Network Detection (5G/4G/3G/2G)
        function detectCellularNetwork() {
            const connection = navigator.connection || 
                              navigator.mozConnection || 
                              navigator.webkitConnection;
            
            if (!connection) {
                // Fallback: if we can't detect, assume cellular might be available
                // when navigator.onLine is false but device has cellular capability
                return { available: null, type: 'unknown' };
            }
            
            const networkType = connection.effectiveType || connection.type;
            const isCellular = networkType === 'cellular' || 
                              networkType === '2g' || 
                              networkType === '3g' || 
                              networkType === '4g' ||
                              networkType === '5g' ||
                              connection.type === 'cellular';
            
            return {
                available: isCellular,
                type: networkType,
                downlink: connection.downlink,
                rtt: connection.rtt
            };
        }

        // Check if device is in airplane mode (truly offline)
        function isInAirplaneMode() {
            // If navigator.onLine is false AND we can't detect any connection type,
            // likely in airplane mode
            if (!navigator.onLine) {
                const connection = navigator.connection || 
                                  navigator.mozConnection || 
                                  navigator.webkitConnection;
                return !connection || connection.type === 'none';
            }
            return false;
        }

        // Connectivity Detection (legacy function - kept for compatibility)
        function checkConnectivity() {
            const hasInternet = navigator.onLine;
            const cellularInfo = detectCellularNetwork();
            
            return { 
                hasInternet, 
                hasCellular: cellularInfo.available === true || cellularInfo.available === null 
            };
        }

        // Build SMS Message
        function buildSMSMessage() {
            const qrToken = document.querySelector('input[name="qrToken"]').value;
            const lat = latitudeInput.value;
            const lng = longitudeInput.value;
            const manualLocation = document.getElementById('manualLocation').value.trim();
            const helperNote = document.getElementById('helperNote').value.trim();
            
            // Format: "REPORT [TOKEN] [LAT] [LNG] [NOTE]"
            let smsMessage = `REPORT ${qrToken}`;
            
            // Add location
            if (lat && lng) {
                smsMessage += ` ${lat} ${lng}`;
            } else if (manualLocation) {
                smsMessage += ` LOCATION ${manualLocation.substring(0, 50)}`;
            }
            
            // Add note (truncate to fit SMS limit)
            if (helperNote) {
                const remainingChars = 140 - smsMessage.length - 6; // Reserve space for " NOTE "
                if (remainingChars > 0) {
                    smsMessage += ` NOTE ${helperNote.substring(0, remainingChars)}`;
                }
            }
            
            // Ensure message is within SMS limits
            if (smsMessage.length > 140) {
                smsMessage = smsMessage.substring(0, 137) + '...';
            }
            
            return smsMessage;
        }

        // Send SMS via device SMS app
        function sendViaSMS() {
            const smsMessage = buildSMSMessage();
            // Service number from server-side (Twilio number configured in .env)
            const serviceNumber = '<%= smsServiceNumber || "" %>';
            const submitBtn = form.querySelector('button[type="submit"]');
            
            if (!serviceNumber) {
                alert('‚ö†Ô∏è SMS service number not configured. Please connect to internet to submit the report.');
                locationStatus.className = 'location-status error';
                locationStatus.textContent = '‚ö†Ô∏è SMS service not available. Please connect to internet.';
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Emergency Report';
                return;
            }
            
            // Construct SMS URL
            const smsUrl = `sms:${serviceNumber}?body=${encodeURIComponent(smsMessage)}`;
            
            // Open SMS app
            window.location.href = smsUrl;
            
            // Show confirmation
            alert('üì± Please send the SMS that opened in your messaging app.\n\nThis will notify emergency contacts even without internet.');
        }

        // Form submission validation and connectivity handling
        form.addEventListener('submit', async (e) => {
            const hasCoordinates = latitudeInput.value && longitudeInput.value;
            const hasManualLocation = document.getElementById('manualLocation').value.trim();
            
            // Check if we're online (WiFi/internet)
            const isOnline = window.offlineStorage && window.offlineStorage.isOnline ? window.offlineStorage.isOnline() : navigator.onLine;
            
            // Location validation
            if (!isOnline) {
                // When offline, only require manual location (GPS/search won't work)
                if (!hasManualLocation) {
                    e.preventDefault();
                    locationStatus.className = 'location-status error';
                    locationStatus.textContent = '‚ö†Ô∏è Please enter location details manually (GPS and search don\'t work offline).';
                    locationStatus.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    return;
                }
            } else {
                // When online, require either coordinates or manual location
                if (!hasCoordinates && !hasManualLocation) {
                    e.preventDefault();
                    locationStatus.className = 'location-status error';
                    locationStatus.textContent = '‚ö†Ô∏è Please provide a location (use current location, search, or enter manual location details).';
                    locationStatus.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    return;
                }
            }

            const submitBtn = form.querySelector('button[type="submit"]');
            
            // STEP 1: If online, let form submit normally (browser handles it)
            if (isOnline) {
                // Normal form submission - browser will handle redirect to thank you page
                submitBtn.disabled = true;
                submitBtn.textContent = 'Sending to Server...';
                console.log('üöÄ Sending report to server (online mode - normal form submission)...');
                return; // Let form submit normally
            }
            
            // STEP 2: If offline, prevent default and try cellular network first
            e.preventDefault();
            submitBtn.disabled = true;
            
            // Get form data
            const formData = new FormData(form);
            
            // STEP 2: If offline, try to send via cellular network first
            console.log('üì¥ Offline detected - attempting to send via cellular network...');
            submitBtn.textContent = 'Trying Cellular Network...';
            
            try {
                // Try to send to server (will use cellular if available)
                const response = await fetch('/accidents/report', {
                    method: 'POST',
                    body: formData,
                    // Increased timeout to account for Render free tier spin-up (50 seconds)
                    signal: AbortSignal.timeout(60000) // 60 second timeout
                });
                
                if (response.ok) {
                    // SUCCESS: Cellular network worked!
                    console.log('‚úÖ Report sent successfully via cellular network');
                    
                    // Show success message briefly, then redirect
                    submitBtn.textContent = 'Report Sent ‚úì';
                    locationStatus.className = 'location-status success';
                    locationStatus.textContent = '‚úÖ Report sent via cellular network! Emergency contacts have been notified. Redirecting...';
                    
                    // Redirect to thank you page
                    setTimeout(() => {
                        window.location.href = '/accidents/report?success=true&redirect=thankyou';
                    }, 1500);
                    return; // Success - exit
                } else {
                    throw new Error(`Server error: ${response.status} ${response.statusText}`);
                }
            } catch (error) {
                // STEP 3: Check if we have cellular network for SMS (bystander never sees emergency contacts)
                const cellularInfo = detectCellularNetwork();
                const airplaneMode = isInAirplaneMode();
                
                console.log('üîç Error details:', {
                    errorName: error.name,
                    errorMessage: error.message,
                    navigatorOnLine: navigator.onLine,
                    airplaneMode: airplaneMode,
                    cellularAvailable: cellularInfo.available,
                    cellularType: cellularInfo.type
                });
                
                // Check if it's a network error (not a validation error)
                const isNetworkError = error.name === 'AbortError' || 
                                      error.name === 'TypeError' || 
                                      error.message.includes('Failed to fetch') ||
                                      error.message.includes('network');
                
                if (!isNetworkError) {
                    // Not a network error - show error to user
                    console.log('‚ùå Not a network error, showing error to user');
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Submit Emergency Report';
                    locationStatus.className = 'location-status error';
                    locationStatus.textContent = `‚ö†Ô∏è Error: ${error.message}`;
                    return;
                }
                
                // Network error - check if we can use SMS via cellular
                // If offline but NOT in airplane mode, try cellular SMS (be aggressive)
                if (!navigator.onLine && !airplaneMode) {
                    // Always try cellular SMS when offline but not in airplane mode
                    // Even if we can't detect cellular, mobile devices usually have it
                    console.log(`üì¥ Offline detected (not airplane mode) - attempting to send SMS via cellular network...`);
                    console.log(`   Cellular detection: available=${cellularInfo.available}, type=${cellularInfo.type}`);
                    submitBtn.textContent = 'Sending via Cellular...';
                    locationStatus.style.display = 'block';
                    locationStatus.className = 'location-status info';
                    locationStatus.textContent = 'üì± Sending report via cellular network (SMS only)...';
                    
                    try {
                        // Try to send to offline endpoint (SMS only, no email)
                        // Server will send SMS directly to emergency contacts (bystander never sees them)
                        console.log('üì§ Attempting POST to /accidents/report-offline...');
                        const offlineResponse = await fetch('/accidents/report-offline', {
                            method: 'POST',
                            body: formData,
                            signal: AbortSignal.timeout(60000) // 60 seconds for Render spin-up
                        });
                        
                        console.log('üì• Response received:', {
                            ok: offlineResponse.ok,
                            status: offlineResponse.status,
                            statusText: offlineResponse.statusText
                        });
                        
                        if (offlineResponse.ok) {
                            const result = await offlineResponse.json();
                            console.log('‚úÖ Server response:', result);
                            
                            // SUCCESS: SMS sent via cellular!
                            console.log('‚úÖ Report sent successfully via cellular network (SMS only)');
                            
                            // Show success message
                            submitBtn.textContent = 'SMS Sent ‚úì';
                            locationStatus.className = 'location-status success';
                            locationStatus.textContent = '‚úÖ Report sent via cellular network! Emergency contacts have been notified via SMS.';
                            
                            // Also store offline for email sync when internet returns
                            setTimeout(async () => {
                                try {
                                    if (!offlineStorageReady) {
                                        console.log('üîÑ Initializing offline storage...');
                                        await initOfflineStorage();
                                    }
                                    
                                    if (window.offlineStorage) {
                                        const qrToken = formData.get('qrToken');
                                        const latitude = formData.get('latitude');
                                        const longitude = formData.get('longitude');
                                        const manualLocation = formData.get('manualLocation');
                                        const helperNote = formData.get('helperNote');
                                        const imageFiles = Array.from(formData.getAll('images')).filter(file => 
                                            file && file instanceof File && file.size > 0
                                        );
                                        
                                        const reportId = await window.offlineStorage.queueReport({
                                            qrToken: qrToken,
                                            latitude: latitude || null,
                                            longitude: longitude || null,
                                            manualLocation: manualLocation || null,
                                            helperNote: helperNote || null
                                        });
                                        
                                        if (imageFiles && imageFiles.length > 0) {
                                            for (const file of imageFiles) {
                                                if (file && file.size > 0) {
                                                    await window.offlineStorage.storeImage(file, reportId);
                                                }
                                            }
                                        }
                                        
                                        if (window.offlineSync) {
                                            await window.offlineSync.updatePendingCount();
                                            window.offlineSync.registerBackgroundSync();
                                        }
                                        
                                        console.log('‚úÖ Report also stored offline for email sync when internet returns');
                                    }
                                } catch (offlineError) {
                                    console.warn('‚ö†Ô∏è Could not store offline backup:', offlineError);
                                }
                            }, 500);
                            
                            // Reset form after 3 seconds
                            setTimeout(() => {
                                form.reset();
                                imagePreviewContainer.innerHTML = '';
                                latitudeInput.value = '';
                                longitudeInput.value = '';
                                selectedLocationDisplay.textContent = '';
                                locationStatus.style.display = 'none';
                                locationStatus.className = 'location-status info';
                                locationStatus.textContent = 'No location selected. Click "Use Current Location" or search for a location.';
                                submitBtn.disabled = false;
                                submitBtn.textContent = 'Submit Emergency Report';
                            }, 3000);
                            
                            return; // Success - exit
                        } else {
                            const errorData = await offlineResponse.json().catch(() => ({ error: 'Server error' }));
                            console.error('‚ùå Server returned error:', errorData);
                            throw new Error(errorData.error || `Server error: ${offlineResponse.status}`);
                        }
                    } catch (offlineError) {
                        // Cellular SMS attempt failed - store offline for later
                        console.error('‚ùå Cellular SMS failed:', {
                            errorName: offlineError.name,
                            errorMessage: offlineError.message,
                            stack: offlineError.stack
                        });
                        // Fall through to offline storage below
                    }
                } else {
                    console.log('‚ö†Ô∏è Skipping cellular SMS attempt:', {
                        navigatorOnLine: navigator.onLine,
                        airplaneMode: airplaneMode
                    });
                }
                
                // STEP 4: No cellular or airplane mode - store offline for later sync
                console.warn('‚ö†Ô∏è No cellular network or airplane mode - storing offline for later sync:', error);
                
                // Network error - store offline
                submitBtn.textContent = 'Saving Offline...';
                
                // Ensure offline storage is ready
                if (!offlineStorageReady) {
                    console.log('üîÑ Initializing offline storage...');
                    await initOfflineStorage();
                }
                
                if (window.offlineStorage) {
                    try {
                        // Extract form data
                        const qrToken = formData.get('qrToken');
                        const latitude = formData.get('latitude');
                        const longitude = formData.get('longitude');
                        const manualLocation = formData.get('manualLocation');
                        const helperNote = formData.get('helperNote');
                        const imageFiles = Array.from(formData.getAll('images')).filter(file => 
                            file && file instanceof File && file.size > 0
                        );
                        
                        console.log('üíæ Storing report offline for retry when connection is restored...');
                        console.log('üìù Report data:', { qrToken, latitude, longitude, manualLocation, helperNote, imageCount: imageFiles.length });
                        
                        // Queue report
                        const reportId = await window.offlineStorage.queueReport({
                            qrToken: qrToken,
                            latitude: latitude || null,
                            longitude: longitude || null,
                            manualLocation: manualLocation || null,
                            helperNote: helperNote || null
                        });
                        
                        console.log('‚úÖ Report queued offline with ID:', reportId);
                        
                        // Store images
                        if (imageFiles && imageFiles.length > 0) {
                            console.log(`üì∑ Storing ${imageFiles.length} image(s) offline...`);
                            let storedCount = 0;
                            for (const file of imageFiles) {
                                if (file && file.size > 0) {
                                    try {
                                        const imageId = await window.offlineStorage.storeImage(file, reportId);
                                        console.log(`‚úÖ Image stored with ID ${imageId} for report ${reportId}: ${file.name} (${file.size} bytes)`);
                                        storedCount++;
                                    } catch (imgError) {
                                        console.error('‚ùå Error storing image:', imgError);
                                    }
                                } else {
                                    console.warn('‚ö†Ô∏è Skipping invalid image file:', file);
                                }
                            }
                            console.log(`‚úÖ Stored ${storedCount} of ${imageFiles.length} image(s) for report ${reportId}`);
                            
                            // Verify images were stored
                            const verifyImages = await window.offlineStorage.getReportImages(reportId);
                            console.log(`üîç Verification: Found ${verifyImages.length} image(s) stored for report ${reportId}`);
                        } else {
                            console.log('‚ö†Ô∏è No images to store for report', reportId);
                        }
                        
                        // Update UI
                        submitBtn.textContent = 'Saved Offline ‚úì';
                        locationStatus.className = 'location-status success';
                        locationStatus.textContent = '‚úÖ Report saved offline! It will be sent automatically when connection is restored.';
                        
                        // Update pending count and register background sync
                        if (window.offlineSync) {
                            await window.offlineSync.updatePendingCount();
                            window.offlineSync.registerBackgroundSync();
                        }
                        
                        // Reset form after 2 seconds
                        setTimeout(() => {
                            form.reset();
                            imagePreviewContainer.innerHTML = '';
                            latitudeInput.value = '';
                            longitudeInput.value = '';
                            selectedLocationDisplay.textContent = '';
                            locationStatus.className = 'location-status info';
                            locationStatus.textContent = 'No location selected. Click "Use Current Location" or search for a location.';
                            submitBtn.disabled = false;
                            submitBtn.textContent = 'Submit Emergency Report';
                        }, 2000);
                    } catch (offlineError) {
                        console.error('‚ùå Error storing offline:', offlineError);
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Submit Emergency Report';
                        locationStatus.className = 'location-status error';
                        locationStatus.textContent = '‚ö†Ô∏è Failed to save offline. Please try again when you have internet connection.';
                    }
                } else {
                    // Offline storage not available
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Submit Emergency Report';
                    locationStatus.className = 'location-status error';
                    locationStatus.textContent = '‚ö†Ô∏è No internet connection and offline storage not available. Please connect to internet to submit.';
                }
            }
        });
    </script>
